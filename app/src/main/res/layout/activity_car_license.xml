<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cit.visitormanagementsystem.CarLicenseActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"></LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Visitor Management System"
                    android:textColor="@color/colorBlack"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorNumSave"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:gravity="center"

                    android:paddingLeft="20dp"
                    android:text="Mr.Maroot Khaijarapun"

                    android:textSize="25sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="dd/mm/yyyy HH:mm:ss"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_Back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:layout_marginRight="50dp"
                    android:layout_toLeftOf="@+id/txt_date"
                    android:layout_toStartOf="@+id/txt_date"
                    android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
                    android:padding="15dp"
                    android:text="BACK"
                    android:textSize="30sp" />


            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@color/colorBlack"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/colorOrange"
                android:gravity="center"
                android:text="ทะเบียนรถ"

                android:textColor="@color/colorNumWhite"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edit_Carlicense"
                android:layout_width="0dp"
                android:inputType="textCapWords"
                android:maxLength="10"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="55sp"
                android:text="กก5555"

                android:background="@color/colorWhite"
                android:gravity="center" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="ตกลง"
                android:textSize="35sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"

            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorBlack"

                android:orientation="horizontal"
                android:weightSum="5">

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorBgCarLicense"
                    android:gravity="center"
                    android:text="7"
                    android:textSize="@dimen/txt_num_size_car_license" />

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorBgCarLicense"
                    android:gravity="center"
                    android:text="8"
                    android:textSize="@dimen/txt_num_size_car_license" />

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorBgCarLicense"
                    android:gravity="center"
                    android:text="9"

                    android:textSize="@dimen/txt_num_size_car_license" />

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:background="@color/colorBgCarLicense"
                    android:gravity="center"
                    android:text="0"

                    android:textSize="@dimen/txt_num_size_car_license" />

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorBgCarLicense"
                    android:text="Delete"
                    android:gravity="center"
                    android:padding="65dp"

                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorBlack"
                android:orientation="horizontal"
                android:weightSum="5">

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorBgCarLicense"
                    android:gravity="center"
                    android:text="4"

                    android:textSize="@dimen/txt_num_size_car_license" />

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorBgCarLicense"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="@dimen/txt_num_size_car_license" />

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorBgCarLicense"
                    android:gravity="center"
                    android:text="6"
                    android:textSize="@dimen/txt_num_size_car_license" />

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_backslash"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorBgCarLicense"
                    android:gravity="center"
                    android:text="/"

                    android:textSize="@dimen/txt_num_size_car_license" />

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_Cross"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorBgCarLicense"
                    android:gravity="center"
                    android:text="-"

                    android:textSize="@dimen/txt_num_size_car_license" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorBlack"
                android:orientation="horizontal"
                android:weightSum="5">

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorBgCarLicense"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="@dimen/txt_num_size_car_license" />

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorBgCarLicense"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="@dimen/txt_num_size_car_license" />

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorBgCarLicense"
                    android:gravity="center"
                    android:text="3"

                    android:textSize="@dimen/txt_num_size_car_license" />

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_Spacebar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="Spacebar"
                    android:textColor="@color/colorCarLicense"
                    android:textSize="25sp" />

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_Alphabet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="ตัวอักษร"
                    android:textColor="@color/colorCarLicense"
                    android:textSize="25sp" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
